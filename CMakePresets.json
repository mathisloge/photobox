{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 26,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": true
            }
        },
        {
            "name": "developer",
            "inherits": "default",
            "installDir": "${sourceDir}/dist",
            "displayName": "Developer Config",
            "description": "The developer configuration",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_TESTING": true,
                "QT_QML_DEBUG": true
            }
        },
        {
            "name": "ci",
            "displayName": "CI configuration",
            "inherits": "default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "BUILD_TESTING": true,
                "CMAKE_C_COMPILER_LAUNCHER": "ccache",
                "CMAKE_CXX_COMPILER_LAUNCHER": "ccache"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "developer",
            "configurePreset": "developer"
        },
        {
            "name": "ci",
            "configurePreset": "ci"
        }
    ],
    "testPresets": [
        {
            "name": "developer",
            "configurePreset": "developer",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        },
        {
            "name": "ci",
            "configurePreset": "ci",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "ignore",
                "stopOnFailure": true
            }
        }
    ],
    "workflowPresets": [
        {
            "name": "ci",
            "steps": [
                {
                    "type": "configure",
                    "name": "ci"
                },
                {
                    "type": "build",
                    "name": "ci"
                },
                {
                    "type": "test",
                    "name": "ci"
                }
            ]
        }
    ]
}
